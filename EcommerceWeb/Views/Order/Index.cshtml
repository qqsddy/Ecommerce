@model IEnumerable<Order>
@{
    ViewData["Title"] = "Orders";
}

<div class="container">
    <div>
        <table class="table table-hover">
            <theard>
                <tr class ="table-light">
                    <th scope="col">ID</th>
                    <th scope="col">CreatedDate</th>
                    <th scope="col">UserID</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                    <th scope="col">Payment Status</th>
                </tr>
            </theard>
            <tbody>
                @foreach(var order in Model)
                {
                    <tr>
                        <th scope="row">@order.ID</th>
                        <td>@order.CreatedDate</td>
                        <td>@order.UserID</td>
                        <td>@order.Total</td>
                        <td>@order.Status</td>
                        <td>@order.PaymentStatus</td>
                        @*<td class="d-flex justify-content-end">
                            <a class="btn btn-primary me-2" asp-controller="Product" asp-action="Edit" asp-route-productID="@product.ID">Edit</a>
                            <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-productID="@product.ID">Delete</a>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
