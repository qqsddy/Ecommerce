@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="d-flex justify-content-end mb-3">
            <a class="btn btn-info" asp-controller="Category" asp-action="Create">Create New Category</a>
    </div>
    <div>
        <table class="table table-hover">
            <theard>
                <tr class ="table-light">
                    <th scope="col">Category ID</th>
                    <th scope="col">Category Name</th>
                    <th scope="col"></th>
                </tr>
            </theard>
            <tbody>
                @foreach(var category in Model)
                {
                    <tr>
                        <th scope="row">@category.ID</th>
                        <td>@category.Name</td>
                        <td class="d-flex justify-content-end">
                            <a class="btn btn-primary me-2" asp-controller="Category" asp-action="Edit" asp-route-id="@category.ID">Edit</a>
                            <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@category.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
